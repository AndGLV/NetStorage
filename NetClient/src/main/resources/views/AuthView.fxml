<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="420.0" minWidth="420.0" prefHeight="430.0" prefWidth="420.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <right>
        <GridPane BorderPane.alignment="CENTER">

            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="220.0" minWidth="10.0" prefWidth="220.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>

            <rowConstraints>
                <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="50.0" minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="110.0" minHeight="10.0" prefHeight="110.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="90.0" minHeight="10.0" prefHeight="90.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="150.0" minHeight="10.0" prefHeight="150.0" vgrow="SOMETIMES" />
            </rowConstraints>


            <children>

                <Label text="Choise User " GridPane.rowIndex="1" />

                <ChoiceBox fx:id="choiseUserName" disable="true" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Username: " GridPane.rowIndex="2" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets top="25.0" />
                    </GridPane.margin>
                </Label>

                <Label text="Password: " GridPane.rowIndex="2" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets top="55.0" />
                    </GridPane.margin>
                </Label>

                <TextField fx:id="textUserName" disable="true" promptText="Enter username here" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets top="20.0" />
                    </GridPane.margin>
                </TextField>

                <CheckBox fx:id="checkRememberMe" disable="true" mnemonicParsing="false" text="Remember me" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="BOTTOM">
                    <GridPane.margin>
                        <Insets bottom="5.0" />
                    </GridPane.margin>
                </CheckBox>

                <Button fx:id="buttonLogIn" disable="true" maxWidth="85.0" mnemonicParsing="false" text="LogIn" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="3" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets left="10.0" top="20.0" />
                    </GridPane.margin>
                </Button>

                <Button fx:id="buttonSignIn" disable="true" maxWidth="85.0" mnemonicParsing="false" text="SignIn" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets right="10.0" top="20.0" />
                    </GridPane.margin>
                </Button>

                <Button fx:id="buttonForgot" disable="true" mnemonicParsing="false" text="Forgot password" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.valignment="BOTTOM">
                    <GridPane.margin>
                        <Insets bottom="5.0" />
                    </GridPane.margin>
                </Button>
                <Label text="Host" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="4" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets top="15.0" />
                    </GridPane.margin>
                </Label>
                <TextField fx:id="textHost" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" promptText="Host" text="127.0.0.1" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets top="10.0" />
                    </GridPane.margin>
                </TextField>
                <TextField fx:id="textPort" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" promptText="Port" text="8189" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets top="40.0" />
                    </GridPane.margin>
                </TextField>
                <Label text="Port" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="4" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets top="45.0" />
                    </GridPane.margin>
                </Label>
                <Button fx:id="buttonConnect" maxWidth="85.0" mnemonicParsing="false" text="Connect" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="4" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets left="10.0" top="80.0" />
                    </GridPane.margin>
                </Button>
                <Button fx:id="buttonDisconnect" disable="true" maxWidth="85.0" mnemonicParsing="false" text="Disconnect" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets right="10.0" top="80.0" />
                    </GridPane.margin>
                </Button>
                <Label fx:id="labelConnectStatus" text="No connected" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="BOTTOM">
                    <GridPane.margin>
                        <Insets bottom="15.0" />
                    </GridPane.margin>
                </Label>
                <PasswordField fx:id="textPassword" disable="true" promptText="Enter password here" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets top="20.0" />
                    </GridPane.margin>
                </PasswordField>

            </children>
        </GridPane>
    </right>
</BorderPane>
